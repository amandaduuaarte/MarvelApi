// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id       String @id @default(uuid())
  category String

  characters Character[]

  @@map("category")
}

model Character {
  id          String @id @default(uuid())
  realname    String @unique
  fictionname String
  avatar      String
  age         Int
  height      Float
  weight      Float
  planet      String
  biography   String
  characterId String

  category Category @relation(fields: [characterId], references: [id])

  skills Skills[]

  @@map("characters")
}

model Skills {
  id           String @id @default(uuid())
  force        Int
  intelligence Int
  agility      Int
  resistance   Int
  velocity     Int

  character   Character @relation(fields: [characterId], references: [id])
  characterId String    @unique

  @@map("skills")
}
