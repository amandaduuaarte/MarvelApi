// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id       String @id @default(uuid())
  category String

  characters Character[]

  @@map("category")
}

model Character {
  id          String @id @default(uuid())
  alterEgo    String
  fictionname String
  avatar      String
  biography   String

  characterId String

  category Category @relation(fields: [characterId], references: [id])

  skills         Skills[]
  caracteristics Caracteristics[]

  @@map("characters")
}

model Caracteristics {
  id String @id @default(uuid())

  age      Int
  height   Float
  weight   Float
  universe String

  character                 Character @relation(fields: [characterCaracteristicsId], references: [id])
  characterCaracteristicsId String    @unique
}

model Skills {
  id           String @id @default(uuid())
  force        Int
  intelligence Int
  agility      Int
  resistance   Int
  velocity     Int

  character         Character @relation(fields: [characterSkillsId], references: [id])
  characterSkillsId String    @unique

  @@map("skills")
}
